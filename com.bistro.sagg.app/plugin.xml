<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.bistro.sagg.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Administration Perspective"
            class="com.bistro.sagg.rcp.perspectives.AdministrationPerspective"
            id="com.bistro.sagg.rcp.perspectives.administration">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.bistro.sagg.employees.views.EmployeeView"
            id="com.bistro.sagg.employees.rcp.views.employees"
            name="Employee View"
            restorable="true">
      </view>
   </extension>

</plugin>
