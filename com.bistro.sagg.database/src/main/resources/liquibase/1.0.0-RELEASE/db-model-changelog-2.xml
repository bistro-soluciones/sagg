<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="sebastian.lavie">
        <createTable tableName="supplier_contacts">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="firstname" type="varchar(25)"/>
            <column name="lastname" type="varchar(25)"/>
            <column name="email" type="varchar(50)"/>
            <column name="phone" type="varchar(15)"/>
            <column name="cellphone" type="varchar(15)"/>
        </createTable>
    </changeSet>
    
    <changeSet id="2" author="sebastian.lavie">
        <createTable tableName="suppliers">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="business_name" type="varchar(50)"/>
            <column name="supplier_id" type="varchar(12)">
                <constraints nullable="false"/>
            </column>
            <column name="contact_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="supplier_contacts" nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="sebastian.lavie">
        <createTable tableName="product_categories">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(50)"/>
        </createTable>
    </changeSet>
    
    <changeSet id="4" author="sebastian.lavie">
        <createTable tableName="supplies">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(50)"/>
            <column name="product_category_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="product_category" nullable="false"/>
            </column>
            <column name="stock" type="int"/>
            <column name="stock_min" type="int"/>
            <column name="unit_price" type="currency"/>
        </createTable>
    </changeSet>

    <changeSet id="5" author="sebastian.lavie">
        <createTable tableName="marketable_products">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(50)"/>
            <column name="product_category_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="product_category" nullable="false"/>
            </column>
            <column name="stock" type="int"/>
            <column name="stock_min" type="int"/>
            <column name="unit_price" type="currency"/>
            <column name="sell_unit_price" type="currency"/>
        </createTable>
    </changeSet>
    
    <changeSet id="6" author="sebastian.lavie">
        <renameColumn tableName="marketable_products" oldColumnName="sell_unit_price" 
        	newColumnName="unit_sales_price" columnDataType="currency"/>
	</changeSet>

    <changeSet id="7" author="sebastian.lavie">
        <createTable tableName="id_generator">
        	<column name="generator_name" type="varchar(20)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
        	<column name="generator_value" type="bigint(20)"/>
        </createTable>
	</changeSet>
        
</databaseChangeLog>