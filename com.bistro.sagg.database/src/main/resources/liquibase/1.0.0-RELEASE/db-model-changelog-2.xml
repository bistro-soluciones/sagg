<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="sebastian.lavie">
        <createTable tableName="supplier_contacts">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="firstname" type="varchar(25)"/>
            <column name="lastname" type="varchar(25)"/>
            <column name="email" type="varchar(50)"/>
            <column name="phone" type="varchar(15)"/>
            <column name="cellphone" type="varchar(15)"/>
        </createTable>
    </changeSet>
    
    <changeSet id="2" author="sebastian.lavie">
        <createTable tableName="suppliers">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="business_name" type="varchar(50)"/>
            <column name="supplier_id" type="varchar(12)">
                <constraints nullable="false"/>
            </column>
            <column name="contact_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="supplier_contacts" nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="sebastian.lavie">
        <createTable tableName="product_categories">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(50)"/>
        </createTable>
    </changeSet>
    
    <changeSet id="4" author="sebastian.lavie">
        <createTable tableName="supplies">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(50)"/>
            <column name="product_category_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="product_category" nullable="false"/>
            </column>
            <column name="stock" type="int"/>
            <column name="stock_min" type="int"/>
            <column name="unit_price" type="currency"/>
        </createTable>
    </changeSet>

    <changeSet id="5" author="sebastian.lavie">
        <createTable tableName="marketable_products">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(50)"/>
            <column name="product_category_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="product_category" nullable="false"/>
            </column>
            <column name="stock" type="int"/>
            <column name="stock_min" type="int"/>
            <column name="unit_price" type="currency"/>
            <column name="sell_unit_price" type="currency"/>
        </createTable>
    </changeSet>
    
    <changeSet id="6" author="sebastian.lavie">
        <renameColumn tableName="marketable_products" oldColumnName="sell_unit_price" 
        	newColumnName="unit_sales_price" columnDataType="currency"/>
	</changeSet>

    <changeSet id="7" author="sebastian.lavie">
        <dropColumn tableName="supplies" columnName="unit_price"/>
	</changeSet>
	
    <changeSet id="8" author="sebastian.lavie">
        <dropColumn tableName="marketable_products" columnName="unit_price"/>
	</changeSet>
	
	<changeSet id="9" author="sebastian.lavie">
        <createTable tableName="id_generator">
        	<column name="generator_name" type="varchar(20)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
        	<column name="generator_value" type="bigint(20)"/>
        </createTable>
	</changeSet>
	
	<changeSet id="10" author="sebastian.lavie">
        <createTable tableName="suppliers_for_categories">
            <column name="supplier_id" type="bigint(20)">
                <constraints primaryKey="true" foreignKeyName="id" referencedTableName="suppliers" nullable="false"/>
            </column>
            <column name="product_category_id" type="bigint(20)">
                <constraints primaryKey="true" foreignKeyName="id" referencedTableName="product_categories" nullable="false"/>
            </column>
    	</createTable>
    </changeSet>
    
    <changeSet id="11" author="sebastian.lavie">
        <dropTable tableName="supplies"/>
    </changeSet>
    
    <changeSet id="12" author="sebastian.lavie">
        <renameTable newTableName="products" oldTableName="marketable_products"/>
    </changeSet>
    
    <changeSet id="13" author="sebastian.lavie">
        <addColumn tableName="products">
        	<column name="product_type" type="varchar(20)" afterColumn="id"/>
        </addColumn>
    </changeSet>
    
    <changeSet id="14" author="sebastian.lavie">
        <dropTable tableName="id_generator"/>
    </changeSet>
    
    <changeSet id="15" author="sebastian.lavie">
        <createTable tableName="document_types">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(30)"/>
        </createTable>
    </changeSet>
    
    <changeSet id="16" author="sebastian.lavie">
        <createTable tableName="billing_documents">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="document_type_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="document_types" nullable="false"/>
            </column>
            <column name="document_number" type="varchar(30)"/>
            <column name="supplier_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="suppliers" nullable="false"/>
            </column>
            <column name="franchise_branch_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="franchise_branches" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="17" author="sebastian.lavie">
        <createTable tableName="billing_items">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="product_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="products" nullable="false"/>
            </column>
            <column name="quantity" type="int"/>
            <column name="unit_price" type="currency"/>
            <column name="tax" type="float"/>
            <column name="tax_amount" type="currency"/>
            <column name="billing_document_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="billing_documents" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
        
</databaseChangeLog>