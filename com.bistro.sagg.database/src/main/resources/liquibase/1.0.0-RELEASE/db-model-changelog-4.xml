<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="sebastian.lavie">
        <createTable tableName="product_formats">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(10)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="sebastian.lavie">
    	<addColumn tableName="products">
            <column name="product_format_id" type="bigint(20)" afterColumn="product_category_id">
                <constraints foreignKeyName="id" referencedTableName="product_formats"/>
            </column>
    	</addColumn>
    </changeSet>
    
    <changeSet id="3" author="sebastian.lavie">
    	<addColumn tableName="product_formats">
            <column name="unit" type="int"/>
    	</addColumn>
    </changeSet>
    
    <changeSet id="4" author="sebastian.lavie">
        <createTable tableName="recipes">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(30)"/>
            <column name="description" type="varchar(500)"/>
            <column name="product_category_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="product_categories" nullable="false"/>
            </column>
            <column name="unit_sales_price" type="currency"/>
            <column name="franchise_branch_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="franchise_branches" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="5" author="sebastian.lavie">
        <createTable tableName="recipe_lines">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="recipe_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="recipes" nullable="false"/>
            </column>
            <column name="supply_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="supplies" nullable="false"/>
            </column>
            <column name="portion" type="int"/>
        </createTable>
    </changeSet>

    <changeSet id="6" author="sebastian.lavie">
        <createTable tableName="combos">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(30)"/>
            <column name="description" type="varchar(500)"/>
            <column name="unit_sales_price" type="currency"/>
            <column name="franchise_branch_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="franchise_branches" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="7" author="sebastian.lavie">
        <createTable tableName="combo_items">
        	<column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="combo_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="combos" nullable="false"/>
            </column>
            <column name="product_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="marketable_products" nullable="false"/>
            </column>
            <column name="recipe_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="recipes" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="8" author="sebastian.lavie">
    	<addColumn tableName="combo_items">
    		<column name="quantity" type="int"/>
    	</addColumn>
    </changeSet>
    
    <changeSet id="9" author="sebastian.lavie">
    	<addColumn tableName="recipes">
    		<column name="combo_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="combos"/>
            </column>
    	</addColumn>
    </changeSet>
    
    <changeSet id="10" author="sebastian.lavie">
    	<addColumn tableName="sale_order_items">
            <column name="recipe_id" type="bigint(20)" afterColumn="product_id">
                <constraints foreignKeyName="id" referencedTableName="recipes"/>
            </column>
    	</addColumn>
    </changeSet>
    
    <changeSet id="11" author="sebastian.lavie">
    	<dropNotNullConstraint tableName="sale_order_items" columnName="product_id" columnDataType="bigint(20)"/>
    </changeSet>
	
    <changeSet id="12" author="sebastian.lavie">
    	<addColumn tableName="sale_order_items">
            <column name="comno_id" type="bigint(20)" afterColumn="recipe_id">
                <constraints foreignKeyName="id" referencedTableName="combos"/>
            </column>
    	</addColumn>
    </changeSet>
	
    <changeSet id="13" author="sebastian.lavie">
    	<addColumn tableName="sale_order_items">
            <column name="combo_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="combos"/>
            </column>
    	</addColumn>
    </changeSet>
	
    <changeSet id="14" author="sebastian.lavie">
    	<addColumn tableName="billing_items">
            <column name="recipe_id" type="bigint(20)" afterColumn="product_id">
                <constraints foreignKeyName="id" referencedTableName="recipes"/>
            </column>
    	</addColumn>
    </changeSet>
        
	<changeSet id="15" author="sebastian.lavie">
    	<addColumn tableName="billing_items">
            <column name="comno_id" type="bigint(20)" afterColumn="recipe_id">
                <constraints foreignKeyName="id" referencedTableName="combos"/>
            </column>
    	</addColumn>
    </changeSet>

    <changeSet id="16" author="sebastian.lavie">
    	<dropTable tableName="billing_items"/>
	</changeSet>
	
	<changeSet id="17" author="sebastian.lavie">
    	<dropTable tableName="billing_documents"/>
	</changeSet>

    <changeSet id="18" author="sebastian.lavie">
        <createTable tableName="purchase_billing_documents">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="document_type_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="document_types" nullable="false"/>
            </column>
            <column name="document_number" type="varchar(30)"/>
            <column name="document_datetime" type="timestamp"/>
            <column name="payment_method_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="payment_methods" nullable="false"/>
            </column>
            <column name="supplier_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="suppliers" nullable="false"/>
            </column>
            <column name="franchise_branch_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="franchise_branches" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
        
    <changeSet id="19" author="sebastian.lavie">
        <createTable tableName="purchase_billing_items">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="product_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="products" nullable="false"/>
            </column>
            <column name="quantity" type="int"/>
            <column name="unit_price" type="currency"/>
            <column name="tax" type="float"/>
            <column name="tax_amount" type="currency"/>
            <column name="billing_document_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="purchase_billing_documents" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="20" author="sebastian.lavie">
        <createTable tableName="sale_billing_documents">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="document_type_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="document_types" nullable="false"/>
            </column>
            <column name="document_number" type="varchar(30)"/>
            <column name="document_datetime" type="timestamp"/>
            <column name="payment_method_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="payment_methods" nullable="false"/>
            </column>
            <column name="employee_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="employees" nullable="false"/>
            </column>
            <column name="franchise_branch_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="franchise_branches" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="21" author="sebastian.lavie">
        <createTable tableName="sale_billing_items">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="combo_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="combos"/>
            </column>
            <column name="product_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="products"/>
            </column>
            <column name="recipe_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="recipes"/>
            </column>
            <column name="quantity" type="int"/>
            <column name="unit_price" type="currency"/>
            <column name="tax" type="float"/>
            <column name="tax_amount" type="currency"/>
            <column name="billing_document_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="sale_billing_documents" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="22" author="sebastian.lavie">
    	<dropColumn tableName="sale_orders" columnName="billing_document_id"/>
    </changeSet>

    <changeSet id="23" author="sebastian.lavie">
    	<addColumn tableName="sale_orders">
    		<column name="billing_document_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="sale_billing_documents"/>
            </column>
    	</addColumn>
    </changeSet>
    
	<changeSet id="24" author="sebastian.lavie">
    	<dropColumn tableName="purchase_orders" columnName="billing_document_id"/>
    </changeSet>
    
	<changeSet id="25" author="sebastian.lavie">
    	<addColumn tableName="purchase_orders">
    		<column name="billing_document_id" type="bigint(20)">
                <constraints foreignKeyName="id" referencedTableName="sale_billing_documents"/>
            </column>
    	</addColumn>
    </changeSet>
    
    <changeSet id="26" author="sebastian.lavie">
    	<addColumn tableName="purchase_order_items">
            <column name="available_stock" type="int" afterColumn="purchase_unit_price"/>
    	</addColumn>
    </changeSet>
    
    <changeSet id="27" author="sebastian.lavie">
        <addColumn tableName="product_categories">
        	<column name="category_type" type="varchar(20)" afterColumn="id"/>
        </addColumn>
    </changeSet>
    
</databaseChangeLog>