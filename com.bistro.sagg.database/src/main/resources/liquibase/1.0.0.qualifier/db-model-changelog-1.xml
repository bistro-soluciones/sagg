<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="sebastian.lavie">
        <createTable tableName="employees">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(50)"/>
            <column name="person_id" type="varchar(12)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(50)"/>
            <column name="phone" type="varchar(15)"/>
            <column name="cellphone" type="varchar(15)"/>
        </createTable>
    </changeSet>
    
    <changeSet id="2" author="sebastian.lavie">
    	<renameColumn tableName="employees" 
    		oldColumnName="name" newColumnName="firstname"
    		columnDataType="varchar(25)"/>
    </changeSet>

    <changeSet id="3" author="sebastian.lavie">
    	<addColumn tableName="employees">
    		<column name="lastname" type="varchar(25)" afterColumn="firstname"/>
    	</addColumn>
    </changeSet>
    
    <changeSet id="4" author="sebastian.lavie">
        <createTable tableName="suppliers">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="business_name" type="varchar(50)"/>
            <column name="supplier_id" type="varchar(12)">
                <constraints nullable="false"/>
            </column>
            <column name="contact_name" type="varchar(50)"/>
            <column name="email" type="varchar(50)"/>
            <column name="phone" type="varchar(15)"/>
            <column name="cellphone" type="varchar(15)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>