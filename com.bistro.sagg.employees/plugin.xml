<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Employees Category"
            id="com.bistro.sagg.employees">
      </category>
      <view
            name="Empleados project"
            icon="icons/sample.gif"
            category="com.bistro.sagg.employees"
            class="com.bistro.sagg.employees.views.EmployeeView"
            id="com.bistro.sagg.employees.views.EmployeeView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="com.bistro.sagg.employees.views.EmployeeView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
