<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="com.bistro.sagg.category.views"
            class="com.bistro.sagg.products.ui.views.ProductCategoryListView"
            id="com.bistro.sagg.products.ui.views.ProductCategoryListView"
            name="Categorías de Productos"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="com.bistro.sagg.category.views"
            class="com.bistro.sagg.products.ui.views.MarketableProductListView"
            id="com.bistro.sagg.products.ui.views.MarketableProductListView"
            name="Productos"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="com.bistro.sagg.category.views"
            class="com.bistro.sagg.products.ui.views.SupplyListView"
            id="com.bistro.sagg.products.ui.views.SupplyListView"
            name="Insumos"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="com.bistro.sagg.category.views"
            class="com.bistro.sagg.products.ui.views.SupplyDetailView"
            id="com.bistro.sagg.products.ui.views.SupplyDetailView"
            name="Detalle de Insumo"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="com.bistro.sagg.category.views"
            class="com.bistro.sagg.products.ui.views.MarketableProductDetailView"
            id="com.bistro.sagg.products.ui.views.MarketableProductDetailView"
            name="Detalle de Producto"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="com.bistro.sagg.category.views"
            class="com.bistro.sagg.products.ui.views.ProductCategoryDetailView"
            id="com.bistro.sagg.products.ui.views.ProductCategoryDetailView"
            name="Detalle de Categoría de Producto"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="com.bistro.sagg.category.views"
            class="com.bistro.sagg.products.ui.views.ProductSelectionView"
            id="com.bistro.sagg.products.ui.views.ProductSelectionView"
            name="Productos"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="com.bistro.sagg.category.views"
            class="com.bistro.sagg.products.ui.views.InventoryLoadingDetailView"
            id="com.bistro.sagg.products.ui.views.InventoryLoadingDetailView"
            name="Detalle de Inventario"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="com.bistro.sagg.category.views"
            class="com.bistro.sagg.products.ui.views.InventoryLoadingConfirmationDetailView"
            id="com.bistro.sagg.products.ui.views.InventoryLoadingConfirmationDetailView"
            name="Confirmación de Inventario"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="com.bistro.sagg.category.commands"
            id="com.bistro.sagg.products.ui.actions.OpenProductCategoriesViewAction"
            name="Open Product Categories View">
      </command>
      <command
            categoryId="com.bistro.sagg.category.commands"
            id="com.bistro.sagg.products.ui.actions.OpenNewProductCategoryDialogAction"
            name="Open New Product Category Dialog">
      </command>
      <command
            categoryId="com.bistro.sagg.category.commands"
            id="com.bistro.sagg.products.ui.actions.OpenMarketableProductsViewAction"
            name="Open Marketable Products View">
      </command>
      <command
            categoryId="com.bistro.sagg.category.commands"
            id="com.bistro.sagg.products.ui.actions.OpenNewMarketableProductDialogAction"
            name="Open New Marketable Product Dialog">
      </command>
      <command
            categoryId="com.bistro.sagg.category.commands"
            id="com.bistro.sagg.products.ui.actions.OpenSuppliesViewAction"
            name="Open Supplies View">
      </command>
      <command
            categoryId="com.bistro.sagg.category.commands"
            id="com.bistro.sagg.products.ui.actions.OpenNewSupplyDialogAction"
            name="Open New Supply Dialog">
      </command>
      <command
            categoryId="com.bistro.sagg.category.commands"
            id="com.bistro.sagg.products.ui.actions.OpenInventoryLoadingDialogAction"
            name="Open Inventory Loading Dialog">
      </command>
   </extension>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.bistro.sagg.products.ui.perspectives.ProductsPerspective"
            id="com.bistro.sagg.products.ui.perspectives.ProductsPerspective"
            name="Productos">
      </perspective>
      <perspective
            class="com.bistro.sagg.products.ui.perspectives.InventoryLoadingPerspective"
            id="com.bistro.sagg.products.ui.perspectives.InventoryLoadingPerspective"
            name="Carga de Inventario">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.bistro.sagg.products.ui.perspectives.ProductsPerspective">
         <view
               closeable="false"
               id="com.bistro.sagg.products.ui.views.MarketableProductDetailView"
               minimized="false"
               ratio="0.55"
               relationship="bottom"
               relative="com.bistro.sagg.products.ui.views.ProductCategoryDetailView"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="com.bistro.sagg.products.ui.views.SupplyDetailView"
               minimized="false"
               relationship="stack"
               relative="com.bistro.sagg.products.ui.views.MarketableProductDetailView"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="com.bistro.sagg.products.ui.views.ProductCategoryDetailView"
               minimized="false"
               ratio="0.58"
               relationship="bottom"
               relative="com.bistro.sagg.products.ui.views.ProductCategoryListView"
               showTitle="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
